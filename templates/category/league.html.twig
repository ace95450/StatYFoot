{% extends "layout.html.twig" %}

{% block title %}
    StatY Foot! Toutes les ligues du monde disponible pour vous.
{% endblock %}


{% block content %}
    <!--MAIN CONTENT ------------------------------------------------------------------------------->
    <main>
        <div id="maincontent" class="row">
            <div id="maincontentleft" class="col-lg-12">

                <li id="titlematchdirect" class="col-12"  data-scroll>Toutes les ligues</li>
                <input type="text" id="myInput" class="input-group-text" onkeyup="searchBar()" placeholder="Rechercher une ligue ou un pays">

                <ul id="myUL" >

                    <div id="leaguelist" class="row">

                    {% for league in leaguecategory | sortbyfield('country') %}
                    <li class="col-lg-4 col-md-6 col-12">
                        <div id="league">
                        <a href="/league/5" id="leaguename">{{ league.name }}</a> <br>
                        <a href="" id="leaguecountry">{{ league.country }}</a><br>
                            <a href=""><img height="70px" src="{{ league.logo }}" alt="{{ league.name }}logo"></a>
                        </div>
                    </li>
                    {% endfor %}
                    </div>

                </ul>



            </div><!--/id maintcontentleft + class col-lg-12-->
        </div><!--/ maincontent row-->
    </main>
    </div><!-- class container-->
{% endblock %}

