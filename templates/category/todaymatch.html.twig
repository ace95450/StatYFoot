{% extends "layout.html.twig" %}

{% block title %}
Bienvenue sur StatY Foot! Match en direct.
{% endblock %}




{% block content %}
<!--MAIN CONTENT ------------------------------------------------------------------------------->
<main>
    <div id="maincontent" class="row">
        <div id="maincontentleft" class="col-lg-12">

            <div id="matchdirect" class="row">
                <div id="contentmatchdirect" class="col-12">
                    <ul class="list-group">
                        <li id="titlematchdirect" class="list-group-item"  data-scroll>Match du Jour</li>
                        {% for daymatch in viewtodaymatch %}
                        <a class="list-group-item" id="linkrow" href="/details-match/{{ daymatch.fixture_id }}">
                            <div id="lignematchdirect" class="row">
                                <div  class="col-1 text-left d-none d-lg-block">{{ daymatch.status }}
                                </div>
                                <div  class="col-lg-4 col-5 text-right">
                                    <span>{{ daymatch.homeTeam }}</span>
                                </div>
                                {% for team in teamcategory %}
                                <div  class="col-2 text-center justify-content-center">
                                    <img alt="{{ daymatch.homeTeam }} logo" id="logomatchteam"  src="{{ team.logo }}" height="20px" >
                                    {{ daymatch.goalsHomeTeam }} - {{ daymatch.goalsAwayTeam }}
                                    <img  alt="{{ daymatch.awayTeam }} logo" id="logomatchteam" src="{{ team.logo }}" height="20px" >
                                </div>
                                {% endfor %}
                                <div  class="col-lg-4 col-5 text-left">
                                    <span>{{ daymatch.awayTeam }}</span>
                                </div>
                                <div  class="col-1 text-right d-none d-lg-block"><i class="fas fa-share-alt"></i>
                                </div>
                            </div><!-- /id ligne -->
                        </a>
                        {% endfor %}
                    </ul>
                </div><!--/id contentmatchdirect + class col-12 ----->
            </div><!--/id matchdirect + class row-->
        </div><!--/id maintcontentleft + class col-lg-12-->

    </div><!--/ maincontent row-->
</main>
</div><!-- class container-->
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="https://unpkg.com/infinite-scroll@3/dist/infinite-scroll.pkgd.min.js"></script>
<script>
</script>
{% endblock %}
