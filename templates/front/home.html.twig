{% extends "layout.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="../css/style.sass">
    <style>
    </style>
{% endblock %}


{% block content %}
    <!--MAIN CONTENT ------------------------------------------------------------------------------->
    <main>
        <div id="maincontent" class="row">
            <div id="maincontentleft" class="col-md-8">
                <div id="matchdirect" class="row">
                    <div id="contentmatchdirect" class="col-12">
                        <ul class="list-group">
                                <li id="titlematchdirect" class="list-group-item" style="text-align: center;" data-scroll>Match du Jour</li>
                            {% for daymatch in fixtures %}
                                <a class="list-group-item" id="linkrow" href="/details-match/{{ daymatch.fixture_id }}">
                                    <div id="lignematchdirect" class="row">
                                        <div  class="col-1 text-left d-none d-md-block">{{ daymatch.status }}
                                        </div>
                                        <div  class="col-md-4 col-5 text-right">
                                            <span data-splitting>{{ daymatch.homeTeam }}</span>
                                        </div>
                                        {% for team in teams %}
                                        <div  class="col-2 text-center justify-content-center">
                                            <img src="{{ team.logo }}" height="16" width="16">
                                            {{ daymatch.goalsHomeTeam }} - {{ daymatch.goalsAwayTeam }}
                                            <img src="{{ team.logo }}" height="16" width="16">
                                        </div>
                                        {% endfor %}
                                        <div  class="col-md-4 col-5 text-left">
                                            <span data-splitting>{{ daymatch.awayTeam }}</span>
                                        </div>
                                        <div  class="col-1 text-right d-none d-md-block"><i class="fas fa-share-alt"></i>
                                        </div>
                                    </div><!-- /id ligne -->
                                </a>
                            {% endfor %}
                            <br>
                        </div><!-- contentmatchdirect ----->
                    </ul>
                    </div><!--/id contentmatchdirect + class col-12 ----->
                </div><!--/id matchdirect + class row-->
            </div><!--/id maintcontentleft + class col-lg-8-->
        {% include 'components/_sidebar.html.twig' %}

            </div><!--/ maincontent row-->
    </main>
    </div><!-- class container-->
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/infinite-scroll@3/dist/infinite-scroll.pkgd.min.js"></script>
    <script>
    </script>
{% endblock %}
